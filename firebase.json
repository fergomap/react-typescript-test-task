{
    "hosting": {
      "public": "build",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [ {
        "source": "*",
        "headers": [ {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        } ]
      }, {
        "source": "*",
        "headers": [ {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        } ]
      }]
    }
  }